                      |  Info
            // Lista Menu Izquierda
            // Contenido Derecha
            #contenido.cont-ingreso.container.col-md-10
              .form-title
                h2 Formulario de Ingreso de Articulos
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-articulo') Articulo
                .col-md-6
                  select#select-articulo.form-control
                    for val in consulta1
                      option= val.nombre_item+" - "+val.nombre_fabricante+" "+val.modelo_item
                .col-md-4.form-control-feedback.hidden-xs-up Por favor, Ingresa la Informacion.
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-serial') Serial
                .col-md-6
                  input#inputEmail3.form-control(type='email', placeholder='Serial Fabricante')
                .col-md-4.form-control-feedback.hidden-xs-up Por favor, Ingresa la Informacion.
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-plaqueta') Plaqueta
                .col-md-6
                  input#inputEmail3.form-control(type='email', placeholder='Serial Digitex')
                .col-md-4.form-control-feedback.hidden-xs-up Por favor, Ingresa la Informacion.
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-estado') Estado
                .col-md-6
                  select#select-estado.form-control
                    for val in consulta2
                      option= val.nombre_estado
                .col-md-4.form-control-feedback.hidden-xs-up Por favor, Ingresa la Informacion.
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-sede') Sede
                .col-md-6
                  select#select-sede.form-control
                    for val in consulta3
                      option(value=val.id_sede)= val.nombre_sede
                .col-md-4.form-control-feedback.hidden-xs-up Por favor, Ingresa la Informacion.
              .form-group.row
                label.col-md-2.col-form-label(for='form-ing-ubicacion') Ubicacion
                .col-md-6
                  for val in consulta3
                    case val.id_sede
                      when 1
                        select.form-control(name='select-bodega1').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 1
                              option(value= values.id_bodega)= values.nombre_bodega
                            else
                      when 2
                        select.form-control(name='select-bodega2').select-bodegas
