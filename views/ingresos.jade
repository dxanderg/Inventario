                            else
                      when 5
                        select.form-control(name='select-bodega5').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 5
                              option(value= values.id_bodega)= values.nombre_bodega
                            else
                      when 6
                        select.form-control(name='select-bodega6').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 6
                              option(value= values.id_bodega)= values.nombre_bodega
                            else
                      when 7
                        select.form-control(name='select-bodega7').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 7
                              option(value= values.id_bodega)= values.nombre_bodega
                            else
                      when 8
                        select.form-control(name='select-bodega8').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 8
                              option(value= values.id_bodega)= values.nombre_bodega
                            else
                      when 9
                        select.form-control(name='select-bodega9').select-bodegas
                          for values in consulta4
                            if values.fk_sede == 9
                              option(value= values.id_bodega)= values.nombre_bodega
