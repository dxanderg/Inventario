extends layout

block content
  // Contenido Derecha
  #contenido.cont-ingreso.container.col-lg-10.col-md-12
    .form-title
      h2 Ocupación de Puestos por Campaña
    // Formulario de busqueda de registros
    #tabla_consultas.container.tablas.tabla-consulta
      .row.clearfix
        .col-md-12.column
          table#tab_logic.table.table-bordered.table-hover
            thead.table-head.thead-inverse
              tr
                th.text-center
                  | Sede
                th.text-center
                  | Ubicación
                th.text-center
                  | Puesto
                th.text-center
                  | CECO
                th.text-center
                  | Campaña
                th.text-center
                  | Editar
            tfoot.table-footer
              tr
                th
                th
                th
                th
                th
                th.hidden-sm-up
            tbody
              each item in consulta1
                tr#addr0
                  td
                    div=item.nombre_sede
                  td
                    div=item.nombre_bodega
                  td
                    div=item.posicion
                  td
                    div=item.CECO
                  td
                    div=item.nombre_campaign
                  td
                    div.editar
                      a(href='#' data-tooltip='Modificar' data-inverted data-position='top center')
                        i.fa.fa-fw.fa-edit
          #confirmCampaign.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true', data-backdrop='static', data-keyboard='false')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#modalTitle.modal-title Actualizar Campaña de Puesto
                .modal-body
                  
                .modal-footer
                  button#cancel.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
                  button#confirm.btn.btn-success(type='submit') Confirmar
    // Formulario de busqueda de registros
  // Contenido Derecha

